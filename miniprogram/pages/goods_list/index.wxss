/* pages/goods_list/index.wxss */
.first_tab .tab_item {
  display: flex;
  border-bottom: 1px solid #ccc;
}
.first_tab .tab_item .tab_image {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tab .tab_item .tab_image image {
  width: 80%;
}
.first_tab .tab_item .tab_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tab .tab_item .tab_wrap .wrap_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.first_tab .tab_item .tab_wrap .wrap_price {
  color: var(--themColor);
  font-size: 32rpx;
}
